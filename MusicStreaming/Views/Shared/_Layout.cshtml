<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RhythmSpot</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Vertical navbar -->
    <div class="vertical-nav bg-white" id="sidebar">
        <div class="py-4 px-3 mb-4 bg-light">
            <div class="media d-flex align-items-center justify-content-center">
                <img src="@Url.Content("~/Uploads/logo.png")" alt="logo" width="150">

            </div>
        </div>

        <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">Main</p>

        <ul class="nav flex-column bg-white mb-0 padding-left">
            <li><img src="https://img.icons8.com/ios-filled/24/000000/music-album.png" class="margin-right" />@Html.ActionLink("Releases", "Index", "Releases")</li>
            <li><img src="https://img.icons8.com/material/24/000000/user--v1.png" class="margin-right" />@Html.ActionLink("Artists", "Index", "Artists")</li>
            <li><img src="https://img.icons8.com/material/24/000000/musical-notes--v1.png" class="margin-right" />@Html.ActionLink("Songs", "Index", "Songs")</li>
            <li><img src="https://img.icons8.com/ios/24/000000/playlist.png" class="margin-right" />@Html.ActionLink("Playlist", "Index", "Playlists")</li>


        </ul>

        <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0"></p>

        @Html.Partial("_LoginPartial")


    </div>
    <!-- End vertical navbar -->
    <!-- Page content holder -->
    <div class="page-content p-5" id="content">
        <!-- Toggle button -->
        <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><img src="https://img.icons8.com/material/24/000000/menu--v1.png" /><small class="text-uppercase font-weight-bold px-2">Toggle</small></button>



        <div class="separator"></div>
        <div class="row text-white">
            <div class="col-lg-12">
                @RenderBody()
            </div>

        </div>

    </div>
    <!-- End demo content -->
